{% schema %}
{
  "name": "Menu Personalizado",
  "settings": [
    {
      "type": "link_list",
      "id": "custom_nav_menu",
      "label": "Menu de navegação",
      "default": "main-menu"
    }
  ],
  "presets": [
    {
      "name": "Menu Personalizado",
      "category": "Navegação"
    }
  ]
}
{% endschema %}

<style>
  .nav-wrapper {
    width: 100%;
    background: transparent;
  }

  .nav-container {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    padding: 1rem;
    list-style: none;
    margin: 0;
  }

  .nav-container li a {
    font-size: 14px;
    font-weight: 700;
    line-height: 16px;
    letter-spacing: 0.02em;
    text-decoration: none;
    color: inherit;
    transition: color 0.2s ease;
  }

  .nav-container li a:hover {
    color: var(--dark-gray);
  }

  @media (max-width: 768px) {
    .nav-container {
      flex-direction: column;
      gap: 1rem;
    }
    .nav-wrapper{
      display:none;
    }
  }
</style>
<div class="nav-wrapper">
  {% if section.settings.custom_nav_menu != blank %}
    <ul class="nav-container">
      {% for link in linklists[section.settings.custom_nav_menu].links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}
</div>




