{% schema %}
{
  "name": "Top Contact Info Bar",
  "settings": [
    {
      "type": "text",
      "id": "contact_email",
      "label": "Contact Email",
      "default": "info@brand.com"
    },
    {
      "type": "text",
      "id": "center_message",
      "label": "Center Message",
      "default": "WE PAY SHIPPING ON ORDERS OVER $X"
    },
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Contact Phone",
      "default": "+1 (111) 222-3333"
    }
  ]
}
{% endschema %}

<style>
  .header-container {
    background-color: var(--background-black);
    padding-block: 0.625rem;
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1170px;
    width: 100%;
    margin-inline: auto;
    gap: 1rem;
    text-align: center;
  }

  .header-content-item {
    color: var(--white);
    font-weight: 400;
    font-size: 1.125rem;
    line-height: 1.875rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .header-content-item i {
    font-size: 18px;
  }

  @media (max-width: 768px) {
    .header-content {
      padding-inline: 20px;
    } 

    .header-content-item{
      font-size:14px;
    }

    .contact-text {
      display: none;
    }
  }

   @media (max-width: 375px) {
    .header-content {
      padding-inline: 20px;
    }

    .contact-text {
      display: none;
    }

    .header-content-item{
      font-size:12px;
    }
  }
</style>

<div class="header-container" role="contentinfo" aria-label="Contact information">
  <div class="header-content">
    
    <div class="header-content-item">
      <i class="fas fa-envelope" aria-hidden="true"></i>
      <a 
        href="mailto:{{ section.settings.contact_email }}" 
        class="contact-text" 
        style="color: inherit; text-decoration: none;"
      >
        {{ section.settings.contact_email }}
      </a>
    </div>

    <div class="header-content-item">
      {{ section.settings.center_message }}
    </div>

    <div class="header-content-item">
      <i class="fas fa-phone-alt" aria-hidden="true"></i>
      <a 
        href="tel:{{ section.settings.contact_phone | remove: ' ' | remove: '(' | remove: ')' | remove: '-' }}" 
        class="contact-text" 
        style="color: inherit; text-decoration: none;"
      >
        {{ section.settings.contact_phone }}
      </a>
    </div>

  </div>
</div>
