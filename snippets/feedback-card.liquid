<style>
  .testimonial-card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 314px;
    text-align: center;
  }

  .testimonial-header {
    display: flex;
    gap: 10px;
    align-items: center;
    margin-bottom: 15px;
    margin-inline: auto;
  }

  .testimonial-avatar {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background-color: var(--gray-dark);
    flex-shrink: 0;
    overflow: hidden;
  }

  .testimonial-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .testimonial-user-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 5px;
  }

  .testimonial-username {
    color: var(--white);
    font-weight: 500;
    font-size: 20px;
    line-height: 100%;
  }

  .testimonial-user-info span:first-child {
    font-weight: bold;
    font-size: 15px;
  }

  .testimonial-content {
    font-size: 20px;
    color: #fff;
    line-height: 100%;
    margin-top: 20px;
    font-weight: 400;
  }

  @media (max-width: 768px) {
   .testimonial-content {
     font-size: 16px;
    }
  }

  @media (max-width: 375px) {
   .testimonial-content {
     font-size: 18px;
    }
  } 
</style>

<div class="testimonial-card">
  <div class="testimonial-header">
    <div class="testimonial-avatar">
      <img
        src="{{ image | img_url: 'medium' }}"
        alt="{{ image | escape }}"
        loading="lazy"
      >
    </div>
    <div class="testimonial-user-info">
      <span class="testimonial-username">{{ name }}</span>
      {% render 'stars-rating', rating: rating %}
    </div>
  </div>
  <span class="testimonial-content">
    {{ comment }}
  </span>
</div>
