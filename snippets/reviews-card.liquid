
{{ 'component-card-review.css' | asset_url | stylesheet_tag }}

<div class="review-card">
  <div class="review-image">
    <img
      src="{{ image | img_url: '1024x1024' }}"
      alt="{{ image | escape }}"
      loading="lazy"
      width=""
      height=""
    >
  </div>

  <div class="review-content">
    <div class="review-author">
      <span class="review-author-name">{{ title }}</span>
      <p class="review-author-location">{{ state }}</p>
    </div>

    <div class="review-stars">
       {% render 'stars-rating', rating: rating %}
    </div>

    <p class="review-text">
      {{ description }}
    </p>

    <div class="review-footer">
      <div class="product-thumbnail">
        <img
          src="{{ product_image | img_url: 'medium' }}"
          alt="{{ product_image | escape }}"
          loading="lazy"
          height=""
          width=""
        >
      </div>
      <p class="product-name">{{ product }}</p>
    </div>
  </div>
</div>
