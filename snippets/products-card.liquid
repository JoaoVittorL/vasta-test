<style>
  :root {
    --card-width: 260px;
    --card-radius: 12px;
    --font-size-title: clamp(14px, 2vw, 18px);
    --font-size-rating: clamp(10px, 1.5vw, 12px);
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(var(--card-width), 1fr));
    gap: 16px;
    justify-content: center;
    align-items: stretch;
  }

  .product-card {
    background-color: var(--white);
    width: 100%;
    max-width: var(--card-width);
    border-radius: var(--card-radius);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    margin: 0 auto;
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
  }

  .card-image {
    background-color: var(--background-content-card);
    height: 260px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .card-body {
    display: flex;
    flex-direction: column;
    padding: 12px;
    background-color: var(--white);
    gap: 8px;
    flex-grow: 1;
  }

  .product-title {
    font-size: var(--font-size-title);
    font-weight: 500;
    line-height: 1.4;
    text-align: left;
  }

  .rating {
    display: flex;
    align-items: center;
    gap: 6px;
    flex-wrap: wrap;
  }

  .rating-text {
    font-size: var(--font-size-rating);
    color: var(--gray-dark);
    font-weight: 500;
    text-align: center;
    line-height: 1.2;
  }

  .star-icon {
    width: 12px;
    color: var(--yellow-review);
  }

  @media (max-width: 768px) {
    .card-image {
      height: 220px;
    }

    .rating-text{
      font-size:12px;
    }
  }

  @media (max-width: 375px) {
    :root {
      --card-width: 160px;
    }

    .card-image {
      height: 180px;
    }

    .rating-text{
      font-size:12px;
    }
  }
</style>

<div class="products-grid">
  <div class="product-card">
    {% if product_image %}
      <div class="card-image">
        <img
          src="{{ product_image | img_url: '1024x1024' }}"
          alt="{{ product | escape }}"
          loading="lazy"
          height=""
          width=""
        >
      </div>
    {% else %}
      <div class="card-image">
        <span>Sem imagem disponível</span>
      </div>
    {% endif %}

    <div class="card-body">
      <div class="product-title">{{ product }}</div>
      <div class="rating">
        {% if rating %}
          {% render 'stars-rating', rating: rating %}
          <span class="rating-text">({{ rating }} de {{ quantity_reviews | default: '800' }} avaliações)</span>
        {% else %}
          <span class="rating-text">Sem avaliações</span>
        {% endif %}
      </div>
    </div>
  </div>
</div>
